---
import data from './data.js'
const { 
  idprojet = 0,
} = Astro.props;
const projet = data[idprojet]
---

<section class="flex gap-10 ">
      <div class="sm:w-96 w-60">
      <h3 class="sm:text-4xl text-xl text-White">{projet.title}</h3>
      <p class="sm:text-lg text-sm text-White">{projet.description}</p>
    </div>
    <a href={'/projet/' + idprojet}><img src="https://via.placeholder.com/700" alt="placeholder" class="w-3/4"/></a>
</section>